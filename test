<?php
if (isset($_POST['username']) && isset($_POST['password'])) {
    echo '
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css">';

    require_once 'config/connect.php';

    $username = $_POST['username'];
    $password = $_POST['password'];
    
    function getUserIP() {
        if (!empty($_SERVER['HTTP_CLIENT_IP'])) {
            $ip = $_SERVER['HTTP_CLIENT_IP'];
        } elseif (!empty($_SERVER['HTTP_X_FORWARDED_FOR'])) {
            $ip = $_SERVER['HTTP_X_FORWARDED_FOR'];
        } else {
            $ip = $_SERVER['REMOTE_ADDR'];
        }
        return $ip;
    }
    
    // ดึง IP ของผู้ใช้
    $ip_address = getUserIP();
    // ดึงวันที่และเวลาในปัจจุบันของประเทศไทย
    date_default_timezone_set('Asia/Bangkok');
    $login_date = date('Y-m-d');
    $login_time = date('H:i:s');

    $stmt_teacher = $condb->prepare("SELECT * FROM teacher WHERE username = :username AND password = :password");
    $stmt_teacher->bindParam(':username', $username);
    $stmt_teacher->bindParam(':password', $password);
    $stmt_teacher->execute();
    $result_teacher = $stmt_teacher->fetch(PDO::FETCH_ASSOC);

    $stmt_student = $condb->prepare("SELECT * FROM student WHERE username = :username AND password = :password");
    $stmt_student->bindParam(':username', $username);
    $stmt_student->bindParam(':password', $password);
    $stmt_student->execute();
    $result_student = $stmt_student->fetch(PDO::FETCH_ASSOC);
    
    if ($result_teacher) {
        $_SESSION['user'] = $result_teacher['name_sername'];
        $_SESSION['role'] = 'teacher';
        $_SESSION['teacher'] = $result_teacher['num_teacher'];

        // Insert into login_history สำหรับ teacher
        $stmt_insert = $condb->prepare("INSERT INTO login_history (teacher_id, user_type, login_date, login_time, status_login, ip_address)
                                        VALUES (:teacher_id, 'teacher', :login_date, :login_time, 'เข้าสู่ระบบสำเร็จ', :ip_address)");
        $stmt_insert->bindParam(':teacher_id', $result_teacher['num_teacher']);
        $stmt_insert->bindParam(':login_date', $login_date);
        $stmt_insert->bindParam(':login_time', $login_time);
        $stmt_insert->bindParam(':ip_address', $ip_address);
        $stmt_insert->execute();

        echo '<script>
                setTimeout(function() {
                    swal({
                        title: "Login สำเร็จ",
                        text: "ยินดีต้อนรับเข้าสู่ระบบ",
                        type: "success"
                    }, function() {
                        window.location = "mainadmin/index.php";
                    });
                }, );
              </script>';
    } elseif ($result_student) {
        $_SESSION['user'] = $result_student['name'];
        $_SESSION['role'] = 'student';
        $_SESSION['class'] = $result_student['class_id'];
        $_SESSION['major'] = $result_student['major_id'];
        $_SESSION['student'] = $result_student['student_id'];

        // Insert into login_history สำหรับ student
        $stmt_insert = $condb->prepare("INSERT INTO login_history (student_id, user_type, login_date, login_time, status_login, ip_address)
                                        VALUES (:student_id, 'student', :login_date, :login_time, 'เข้าสู่ระบบสำเร็จ', :ip_address)");
        $stmt_insert->bindParam(':student_id', $result_student['student_id']);
        $stmt_insert->bindParam(':login_date', $login_date);
        $stmt_insert->bindParam(':login_time', $login_time);
        $stmt_insert->bindParam(':ip_address', $ip_address);
        $stmt_insert->execute();

        echo '<script>
                setTimeout(function() {
                    swal({
                        title: "Login สำเร็จ",
                        text: "ยินดีต้อนรับเข้าสู่ระบบ",
                        type: "success"
                    }, function() {
                        window.location = "mainstu/index.php";
                    });
                }, );
              </script>';
    } else {
        echo '<script>
                setTimeout(function() {
                    swal({
                        title: "⚠️ Login ไม่สำเร็จ",
                        text: "Username หรือ Password ไม่ถูกต้อง",
                        type: "error"
                    }, function() {
                        window.location = "loginregis.php";
                    });
                }, );
              </script>';
    }
}
?>
