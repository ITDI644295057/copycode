    <script>
        // Example subjects data
        const subjects = {
            "ปวช1": [{
                    code: "001",
                    name: "คณิตศาสตร์พื้นฐาน",
                    credit: "3",
                    major: "101"
                },
                {
                    code: "002",
                    name: "ฟิสิกส์พื้นฐาน",
                    credit: "4",
                    major: "102"
                }
            ],
            "ปวช2": [{
                    code: "101",
                    name: "เคมีพื้นฐาน",
                    credit: "3",
                    major: "103"
                },
                {
                    code: "102",
                    name: "ชีววิทยาพื้นฐาน",
                    credit: "4",
                    major: "104"
                }
            ],
            "ปวช3": [{
                    code: "201",
                    name: "ภาษาอังกฤษเพื่ออาชีพ",
                    credit: "2",
                    major: "105"
                },
                {
                    code: "202",
                    name: "การจัดการธุรกิจ",
                    credit: "3",
                    major: "106"
                }
            ],
            "ปวส1": [{
                    code: "301",
                    name: "การเงินและการบัญชี",
                    credit: "3",
                    major: "107"
                },
                {
                    code: "302",
                    name: "การตลาด",
                    credit: "4",
                    major: "108"
                }
            ],
            "ปวส2": [{
                    code: "401",
                    name: "การจัดการทรัพยากรมนุษย์",
                    credit: "3",
                    major: "109"
                },
                {
                    code: "402",
                    name: "เทคโนโลยีสารสนเทศ",
                    credit: "4",
                    major: "110"
                }
            ]
        };

        function loadSubjects(grade) {
            const tbody1 = document.getElementById('subject-tbody-1');
            const tbody2 = document.getElementById('subject-tbody-2');
            tbody1.innerHTML = ""; // Clear existing rows for Period 1
            tbody2.innerHTML = ""; // Clear existing rows for Period 2

            if (subjects[grade]) {
                subjects[grade].forEach(subject => {
                    const row = `<tr>
                            <td>${subject.code}</td>
                            <td>${subject.name}</td>
                            <td>${subject.credit}</td>
                            <td>${subject.major}</td>
                            <td class='text-center'>
                                <a href="#" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class='text-center'>
                                <a href="#" class="btn btn-danger btn-sm delete-button">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>`;
                    tbody1.insertAdjacentHTML('beforeend', row); // Add to Period 1 table
                    tbody2.insertAdjacentHTML('beforeend', row); // Add to Period 2 table
                });

                // Initialize DataTables after content is loaded
                $('#subject-table-1').DataTable();
                $('#subject-table-2').DataTable();
            } else {
                tbody1.insertAdjacentHTML('beforeend', '<tr><td colspan="6" class="text-center">ไม่พบข้อมูล</td></tr>');
                tbody2.insertAdjacentHTML('beforeend', '<tr><td colspan="6" class="text-center">ไม่พบข้อมูล</td></tr>');
            }
        }

        // Delete confirmation
        document.addEventListener('click', function(e) {
            if (e.target && e.target.matches('.delete-button')) {
                e.preventDefault();
                Swal.fire({
                    title: 'คุณแน่ใจหรือไม่?',
                    text: "คุณจะไม่สามารถย้อนกลับได้!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'ใช่, ลบข้อมูล!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        Swal.fire('ลบข้อมูล!', 'ข้อมูลของคุณถูกลบแล้ว', 'success');
                    }
                });
            }
        });

        // Excel export functionality
        document.getElementById('export-btn').addEventListener('click', function() {
            const wb = XLSX.utils.book_new();
            const ws1 = XLSX.utils.table_to_sheet(document.getElementById('subject-table-1'));
            const ws2 = XLSX.utils.table_to_sheet(document.getElementById('subject-table-2'));
            XLSX.utils.book_append_sheet(wb, ws1, 'ภาคเรียนที่ 1');
            XLSX.utils.book_append_sheet(wb, ws2, 'ภาคเรียนที่ 2');
            XLSX.writeFile(wb, 'subjects.xlsx');
        });

        // File upload functionality
        document.getElementById('upload-file').addEventListener('change', function() {
            var formData = new FormData();
            var fileInput = document.getElementById('upload-file');
            var file = fileInput.files[0];

            formData.append('upload-file', file);

            fetch('upload_subjects.php', {
                    method: 'POST',
                    body: formData,
                })
                .then(response => response.json())
                .catch(error => {
                    console.error('Fetch error:', error);
                    return {};
                })
                .finally(() => {
                    Swal.fire({
                        title: 'สำเร็จ!',
                        text: 'ข้อมูลได้ถูกอัปโหลดเรียบร้อยแล้ว',
                        icon: 'success',
                        confirmButtonText: 'ตกลง'
                    }).then(() => {
                        window.location.href = 'subject.php';
                    });
                });
        });

        // กำหนดปีการศึกษาเริ่มต้น
        let years = [2565, 2566, 2567, 2568, 2569];
        let currentIndex = 2; // ปีการศึกษา 2567 (index 2)

        function updateYear() {
            document.getElementById('academic-year').textContent = 'ปีการศึกษา ' + years[currentIndex];
        }

        function prevYear() {
            if (currentIndex > 0) {
                currentIndex--;
                updateYear();
            }
        }

        function nextYear() {
            if (currentIndex < years.length - 1) {
                currentIndex++;
                updateYear();
            }
        }
    </script>
</body>

