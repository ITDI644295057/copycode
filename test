<?php
include '../config/connect.php';

// กำหนดค่าเริ่มต้นของตัวแปร $student ให้เป็น null
$student = null;
$student_id = isset($_SESSION['student']) ? $_SESSION['student'] : null;

try {
    if ($student_id) {
        // คำสั่ง SQL สำหรับการดึงข้อมูลนักศึกษา
        $sql = "SELECT
                    s.student_id,
                    s.ID_card,
                    s.name,
                    s.phone,
                    s.admit,
                    s.learner_type,
                    s.student_status,
                    s.enrollment_year,
                    m.major_name,
                    m.field_of_work_name,
                    c.class_year,
                    sg.study_group_id,
                    sg.study_group_name,
                    t.name_sername,
                    t.position,
                    t.phone AS teacher_phone
                FROM
                    student s
                JOIN major m ON s.major_id = m.major_id
                JOIN class c ON s.class_id = c.class_id
                JOIN study_group sg ON c.study_group_id = sg.study_group_id
                JOIN class_teacher ct ON s.class_id = ct.class_id
                JOIN teacher t ON ct.num_teacher = t.num_teacher
                WHERE
                    s.student_id = :student_id";

        // เตรียม statement
        $stmt = $condb->prepare($sql);
        $stmt->bindParam(':student_id', $student_id, PDO::PARAM_STR);

        // รันคำสั่ง SQL
        $stmt->execute();

        // ดึงข้อมูล
        $student = $stmt->fetch();

        if (!$student) {
            echo "ไม่พบนักศึกษาที่มีรหัส $student_id";
        }
    } else {
        echo "กรุณาระบุรหัสนักศึกษา";
    }
} catch (PDOException $e) {
    echo "การเชื่อมต่อฐานข้อมูลล้มเหลว: " . $e->getMessage();
}
?>


