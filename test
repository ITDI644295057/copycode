        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-custom">
                            <div class="card-header card-header-custom">
                                <h3 class="card-title">ฟอร์มชำระเงินสด</h3>
                            </div>
                            <div class="card-body card-body-custom">
                                <div class="form-container">
                                    <form id="paymentForm" method="post" action="payment_process.php"
                                        enctype="multipart/form-data">
                                        <!-- รหัสการลงทะเบียน -->
                                        <div class="form-group">
                                            <label for="registrationCode">รหัสการลงทะเบียน</label>
                                            <div class="input-group">
                                                <input type="text" class="form-control" id="registrationCode"
                                                    name="registrationCode" required>
                                                <button type="button" class="btn btn-outline-primary fetch-button"
                                                    id="fetchRegistrationCode">
                                                    <i class="fas fa-search"></i> ดึงข้อมูล
                                                </button>
                                            </div>
                                        </div>

                                        <!-- รหัสนักเรียน -->
                                        <div class="form-group">
                                            <label for="studentId">รหัสนักเรียน</label>
